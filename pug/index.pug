html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css")
        link(rel="stylesheet", href="css/style.css")
        title Document
    body
        .box
            .box-wraper 
                h3.box-title Day la title 
                p.box-body Day la phan content 
                a.box-btn More
                input(type="text", value="day la value", placeholder="nhap value o day")
        .swiper.mySwiper
            .swiper-wrapper
                .swiper-slide Slider 1
                .swiper-slide Slider 2
                .swiper-slide Slider 3
                .swiper-slide Slider 4
                .swiper-slide Slider 5
                .swiper-slide Slider 6
        a(class="showform") Show Form 

        .form 
            form#form
                label(for="tensinhvien")
                    | tensinhvien: 
                    input#tensinhvien(type="text", name="tensinhvien", minlength="8", maxlength="10", required)
                label(for="lop") 
                    | lop: 
                    input#lop(type="text", name="lop", required)
                label(for="namsinh")
                    | namsinh: 
                    input#namsinh(type="datetime", name="namsinh", required)
                
                button(type="submit")
                    | Them Sinh vien
            

        script(src="https://code.jquery.com/jquery-3.7.0.js") 
        script(src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js") 
